<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               xmlns:tools="http://schemas.android.com/tools"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbarEditProfile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/item_divider"></include>



            <TextView
                android:id="@+id/edit_profile_photo_explain_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/profileTitle.sub.accent"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_xsmall"
                android:text="@string/edit_profile_photo_explain_gallery"/>
            <include layout="@layout/item_divider"></include>

        <TextView
            android:id="@+id/pick_photo_text"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/profileTitle.sub.accent"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_xsmall"
            android:text="@string/edit_photo_explain_gallery"/>

        <include layout="@layout/item_divider"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_vertical_margin_large"
            android:paddingEnd="@dimen/activity_vertical_margin_large"
            android:paddingTop="@dimen/activity_vertical_margin_small"
            android:paddingBottom="@dimen/activity_vertical_margin_small"
            android:orientation="horizontal">
                    <TextView
                        android:id="@+id/label_Proffesion_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/editProfileTitle"
                        android:gravity="start"
                        android:text="@string/edit_profile_work"/>
                    <EditText
                        android:id="@+id/editable_proffesionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/editProfileTitle.sub"
                        android:text=""
                        android:maxLength="35"
                        android:gravity="end"
                        android:background="@null"
                        android:ellipsize="end"
                        android:maxLines="1"/>
        </LinearLayout>
            <include layout="@layout/item_divider"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_vertical_margin_large"
                android:paddingEnd="@dimen/activity_vertical_margin_large"
                android:paddingTop="@dimen/activity_vertical_margin_small"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_CenterStudy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/editProfileTitle"
                    android:gravity="start"
                    android:text="@string/edit_profile_formacion"/>
                <EditText
                    android:id="@+id/editable_centerStudyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/editProfileTitle.sub"
                    android:maxLength="40"
                    android:text=""
                    android:gravity="end"
                    android:background="@null"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </LinearLayout>
            <include layout="@layout/item_divider"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_vertical_margin_large"
                android:paddingEnd="@dimen/activity_vertical_margin_large"
                android:paddingTop="@dimen/activity_vertical_margin_small"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/label_about_me_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/editProfileTitle"
                    android:gravity="start"
                    android:text="@string/edit_profile_about_me"/>
                <EditText
                    android:id="@+id/editable_about_me_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin_small"
                    style="@style/editProfileTitle.sub"
                    android:maxLength="500"
                    android:text=""
                    android:gravity="start"
                    android:background="@null"
                    android:ellipsize="end"
                    android:maxLines="3"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>