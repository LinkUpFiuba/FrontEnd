<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ChatRoomActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_chat_room">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:padding="@dimen/activity_vertical_margin"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/message_area"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/chat_recycler_view"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText android:id="@+id/message"
                  android:hint="@string/enter_message"
                  android:layout_width="0dip"
                  android:layout_weight="1"
                  android:background="@null"
                  android:paddingStart="@dimen/activity_horizontal_margin"
                  android:paddingEnd="@dimen/activity_vertical_margin_small"
                  android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLike"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/accent"
            android:layout_marginEnd="@dimen/activity_vertical_margin_small"
            app:elevation="6dp"
            android:src="@drawable/ic_send_white_24dp"
            />

    </LinearLayout>


</LinearLayout>

