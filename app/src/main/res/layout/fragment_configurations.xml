<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/profile_back_gray"
      >
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-320dp"
        android:layout_marginEnd="-320dp"
        android:layout_marginTop="-320dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/circular_background">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/profileImage"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin_small"
            android:layout_marginTop="@dimen/activity_vertical_margin_large"
            />
        <TextView
            android:id="@+id/sample_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_marginBottom="@dimen/activity_vertical_margin_small"
            android:text="Leo, 34"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <Button
                android:id="@+id/editAccount"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="0dip"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:height="@dimen/button_height"
                android:background="@color/profile_back_gray"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:drawablePadding="10dp"
                android:drawableTint="@color/icons"
                android:gravity="left|center_vertical"
                android:text="@string/activity_configurations_account"
                android:drawableLeft="@drawable/ic_settings_black_24dp"
                android:textColor="@color/icons"/>

            <Button
                android:id="@+id/editInfo"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dip"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:drawableTint="@color/icons"
                android:gravity="left|center_vertical"
                android:drawablePadding="10dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:height="@dimen/button_height"
                android:background="@color/profile_back_gray"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/activity_configurations_edit_info"
                android:textColor="@color/icons"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>