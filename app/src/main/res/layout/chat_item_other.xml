
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/activity_vertical_margin_small"
    >

<TextView
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:background="@drawable/bg_bubble_other"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin_small"
    android:text="Hola que tal"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_small"
    android:paddingBottom="@dimen/activity_vertical_margin_small"
    android:textIsSelectable="true"
    android:textSize="@dimen/text_size_medium"
    android:textColor="@color/icons"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingBottom="@dimen/activity_vertical_margin_small"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        >

        <ImageButton
            android:id="@+id/likeChatNotChecked"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_favorite_border_checked"/>

        <ImageButton
            android:id="@+id/likeChatChecked"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@null"
            android:visibility="invisible"
            android:scaleType="fitXY"
            android:src="@drawable/ic_favorite_white_24dp"
            android:tint="@color/primary"/>
    </FrameLayout>


</RelativeLayout>
